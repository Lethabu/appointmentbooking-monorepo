modules = ["nodejs-20"]
[nix]
channel = "stable-25_05"
packages = ["unzip"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev-server"

[[workflows.workflow]]
name = "dev-server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./start.sh"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
build = ["sh", "-c", "pnpm install --no-frozen-lockfile && pnpm turbo run build --filter=@repo/db --filter=@repo/auth --filter=@repo/ai --filter=@repo/worker && pnpm run db:push --force && cd apps/booking && pnpm run build"]
run = ["sh", "-c", "cd apps/booking && pnpm run start --port 5000 --hostname 0.0.0.0"]
deploymentTarget = "cloudrun"
