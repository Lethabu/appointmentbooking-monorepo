{
  "name": "appointmentbooking-monorepo",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:sequential": "turbo run build --concurrency 1",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,js,jsx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,js,jsx}\"",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "deploy": "turbo run deploy",
    "setup": "node scripts/setup-project.js",
    "setup:hooks": "npx husky install && npx husky add .husky/pre-commit \"pnpm run quality:check\"",
    "quality:report": "echo 'Quality report generation...'",
    "pre-commit": "pnpm run lint && pnpm run type-check",
    "validate:openapi": "node scripts/validate-openapi-contract.js",
    "validate:schema": "node scripts/validate-database-schema.js",
    "validate:zod": "node scripts/validate-zod-schemas.js",
    "validate:migrations": "node scripts/validate-migrations.js",
    "validate:env": "node scripts/validate-env.js",
    "validate:bundle": "node scripts/check-bundle-size.js apps/booking/.open-next/assets",
    "validate:health": "node scripts/health-check-production.js",
    "validate:endpoints": "node scripts/validate-endpoint-availability.js",
    "validate:e2e": "node scripts/e2e-contract-tests.js",
    "validate:zod-runtime": "node scripts/validate-zod-runtime.js",
    "validate:performance": "node scripts/performance-baseline-tests.js",
    "validate:workflows": "node scripts/validate-workflows.js",
    "validate:phase1": "pnpm run validate:openapi && pnpm run validate:schema && pnpm run validate:zod && pnpm run validate:migrations",
    "validate:phase2": "pnpm run validate:health && pnpm run validate:endpoints",
    "validate:phase3": "pnpm run validate:e2e && pnpm run validate:zod-runtime && pnpm run validate:performance",
    "validate:all": "pnpm run validate:phase1 && pnpm run validate:phase2 && pnpm run validate:phase3",
    "validate:pre-deploy": "node scripts/pre-deployment-validation.js",
    "validate:test-scripts": "node scripts/test-validation-scripts.js",
    "monitor:collect": "node scripts/collect-deployment-metrics.js full",
    "monitor:collect-quick": "node scripts/collect-deployment-metrics.js quick",
    "monitor:report": "node scripts/generate-deployment-report.js",
    "monitor:continuous": "node scripts/post-deployment-monitoring.js 30 60",
    "monitor:watch": "node scripts/post-deployment-monitoring.js 60 30",
    "monitor:github": "node scripts/monitor-github-deployment.js",
    "deploy:retry": "node scripts/deploy-with-retry.js",
    "deploy:until-success": "node scripts/deploy-until-success.js",
    "deploy:auto": "node scripts/production-deploy-auto.js",
    "deploy:auto:staging": "DEPLOY_ENV=staging node scripts/production-deploy-auto.js",
    "deploy:auto:skip-e2e": "node scripts/production-deploy-auto.js --skip-e2e",
    "deploy:auto:dry-run": "node scripts/production-deploy-auto.js --dry-run",
    "deploy:auto:verbose": "node scripts/production-deploy-auto.js --verbose",
    "deploy:continue": "node scripts/continue-deployment.js",
    "deploy:check": "node scripts/continue-deployment.js",
    "predeploy": "pnpm run validate:pre-deploy",
    "postdeploy": "pnpm run monitor:collect-quick"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "axe-core": "^4.7.2",
    "drizzle-kit": "^0.31.8",
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.0.0",
    "turbo": "^2.6.0",
    "wrangler": "^4.59.0",
    "yaml": "^2.3.4"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.28.0",
    "@tanstack/react-query": "^5.90.7",
    "lucide-react": "0.468.0",
    "node-fetch": "^3.3.2",
    "recharts": "^2.15.4"
  },
  "pnpm": {
    "overrides": {
      "drizzle-orm": "0.45.1",
      "@cloudflare/workers-types": "4.20251121.0",
      "esbuild": "0.19.12"
    }
  }
}