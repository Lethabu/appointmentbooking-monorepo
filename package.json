{
  "name": "appointmentbooking-monorepo",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:sequential": "npm run build:packages && npm run build:booking && npm run build:dashboard && npm run build:marketing",
    "build:packages": "npm run build --workspace=@repo/db --workspace=@repo/auth --workspace=@repo/ai --workspace=@repo/worker",
    "build:booking": "cd apps/booking && pnpm exec cross-env NODE_OPTIONS='--max-old-space-size=8192' pnpm run build && cd ..",
    "build:dashboard": "cd apps/dashboard && pnpm exec cross-env NODE_OPTIONS='--max-old-space-size=8192' pnpm run build && cd ..",
    "build:marketing": "cd apps/marketing && pnpm run build && cd ..",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "lint:report": "turbo run lint -- --format json --output-file reports/eslint-report.json",
    "format": "prettier --write \"**/*.{ts,tsx,md,js,jsx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,js,jsx}\"",
    "type-check": "turbo run type-check",
    "quality:check": "npm run lint && npm run type-check && npm run format:check",
    "quality:fix": "npm run lint:fix && npm run format",
    "quality:report": "npm run lint:report && node scripts/generate-quality-metrics.js",
    "pre-commit": "npm run quality:check",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types",
    "go-live": "node scripts/go-live-checklist.js",
    "verify-api": "node scripts/verify-production-api.js",
    "migrate-db": "wrangler d1 execute appointmentbooking-db --remote --file=scripts/migrations/006-sync-supersaas.sql",
    "test:integration": "node ./scripts/integration/worker-endpoints.test.js",
    "test:sse-cache": "node ./scripts/integration/sse-cache.test.js",
    "test:accessibility": "node ./scripts/integration/accessibility.test.js",
    "test:e2e": "pnpm run test:integration && pnpm run test:accessibility",
    "setup:hooks": "npx husky install && npx husky add .husky/pre-commit \"npm run pre-commit\""
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "axe-core": "^4.7.2",
    "drizzle-kit": "^0.31.8",
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.0.0",
    "turbo": "^2.6.0",
    "wrangler": "^3.22.4"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.28.0",
    "@tanstack/react-query": "^5.90.7",
    "node-fetch": "^3.3.2",
    "recharts": "^2.15.4"
  },
  "pnpm": {
    "overrides": {
      "drizzle-orm": "0.45.1"
    }
  }
}