{
  "name": "appointmentbooking-monorepo",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:sequential": "turbo run build --concurrency 1",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,js,jsx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,js,jsx}\"",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "deploy": "turbo run deploy",
    "setup": "node scripts/setup-project.js",
    "setup:hooks": "npx husky install && npx husky add .husky/pre-commit \"pnpm run quality:check\"",
    "quality:report": "echo 'Quality report generation...'",
    "pre-commit": "pnpm run lint && pnpm run type-check"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "axe-core": "^4.7.2",
    "drizzle-kit": "^0.31.8",
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.0.0",
    "turbo": "^2.6.0",
    "wrangler": "^4.59.0"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.28.0",
    "@tanstack/react-query": "^5.90.7",
    "lucide-react": "0.468.0",
    "node-fetch": "^3.3.2",
    "recharts": "^2.15.4"
  },
  "pnpm": {
    "overrides": {
      "drizzle-orm": "0.45.1",
      "@cloudflare/workers-types": "4.20251121.0",
      "esbuild": "0.16.17"
    }
  }
}